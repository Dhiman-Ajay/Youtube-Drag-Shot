
{
  "manifest_version": 3,
  "name": "YouTube Screenshot Gallery",
  "version": "1.0",
  "description": "Take screenshots of YouTube videos and view them in a gallery below the player",
  "permissions": ["activeTab"],
  "content_scripts": [
    {
      "matches": ["*://*.youtube.com/*"],
      "js": ["content.js"],
      "css": ["styles.css"]
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}